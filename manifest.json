{
  "manifest_version": 3,
  "name": "Rich Text to Markdown",
  "version": "1.0.0",
  "description": "Convert rich text to GitHub Flavored Markdown by pasting",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Rich Text to Markdown"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
